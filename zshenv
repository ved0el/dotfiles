# dotfiles environment — sourced by all zsh instances (interactive and non-interactive)
# Managed by 'dotfiles profile <name>' — do not edit the DOTFILES_PROFILE line manually

export DOTFILES_ROOT="${DOTFILES_ROOT:-$HOME/.dotfiles}"
export DOTFILES_PROFILE="${DOTFILES_PROFILE:-minimal}"
export DOTFILES_VERBOSE="${DOTFILES_VERBOSE:-false}"
export LANG="${LANG:-en_US.UTF-8}"
export LC_ALL="${LC_ALL:-C.UTF-8}"
