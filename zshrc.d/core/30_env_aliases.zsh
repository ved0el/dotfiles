#!/usr/bin/env zsh

# Essential aliases for fast navigation
alias zshsrc="source ~/.zshrc"
alias zshedit="$EDITOR ~/.zshrc"



# Tools aliases
alias cd="z"
alias cdi="zi"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"

alias ls="eza -g"
alias ll="eza -lg"
alias la="eza -lag"
alias lt="eza --tree"
alias lta="eza --tree -ag"

