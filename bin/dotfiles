  echo -e "  ${GRAY}Verbose Logging:${NC}        ${GREEN}${DOTFILES_VERBOSE:-$DEFAULT_VERBOSE}${NC}"
  echo -e "  ${GRAY}Branch:${NC}                 ${BLUE}${DOTFILES_BRANCH:-$DEFAULT_BRANCH}${NC}"
  
  echo
  echo -e "${BOLD}${WHITE}Available Actions:${NC}"
  echo -e "  ${BOLD}1)${NC} ${GREEN}ðŸš€ Install/Update${NC}        - Set up or refresh your dotfiles"
  echo -e "  ${BOLD}2)${NC} ${RED}ðŸ—‘ï¸  Uninstall${NC}             - Remove all dotfiles and configuration"
  echo -e "  ${BOLD}3)${NC} ${YELLOW}âš™ï¸  Change Profile${NC}        - Switch between minimal/server/develop"
  echo -e "  ${BOLD}4)${NC} ${BLUE}ðŸ“ Change Directory${NC}      - Modify installation location"
  echo -e "  ${BOLD}5)${NC} ${CYAN}ðŸ“¦ Install Packages${NC}      - Install tools for current profile"
